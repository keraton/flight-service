						"exec": [
							"pm.test('response has right pricing', () => {",
							"    const flightNumber = pm.environment.get(\"flightNumber\");",
							"    pm.expect(pm.response.json().flightNumber).to.be.equal(flightNumber);",
							"    ",
							"    pm.environment.set(\"pricing\", pm.response.text());",
							"});"
